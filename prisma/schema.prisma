generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Example {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id                     String    @id @default(cuid())
  name                   String?
  login                  String    @unique
  role                   Int       @default(3)
  email                  String?   @unique
  password               String
  image                  String?
  creatorId              String?
  feePerkwForCompany     Int       @default(0)
  feePerkwHeatPump       Int       @default(0)
  feePerkwPhotovoltaic   Int       @default(0)
  imposedFeeForCompany   Int       @default(0)
  imposedFeeHeatPump     Int       @default(0)
  imposedFeePhotovoltaic Int       @default(0)
  creator                User?     @relation("creatorWorker", fields: [creatorId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  workers                User[]    @relation("creatorWorker")
  sessions               Session[]

  @@index([creatorId])
}

model Image {
  id          String @id @default(cuid())
  title       String
  description String @db.LongText
  url         String
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
