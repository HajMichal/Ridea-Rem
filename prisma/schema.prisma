generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
}

model Example {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id                     String    @id @default(auto()) @map("_id") @db.ObjectId
  name                   String?
  login                  String    @unique
  role                   Int       @default(3)
  email                  String?   @unique
  password               String
  image                  String?
  creatorId              String?
  feePerkwForCompany     Int       @default(0)
  feePerkwHeatPump       Int       @default(0)
  feePerkwPhotovoltaic   Int       @default(0)
  imposedFeeForCompany   Int       @default(0)
  imposedFeeHeatPump     Int       @default(0)
  imposedFeePhotovoltaic Int       @default(0)
  feePerkwHeatHome       Int       @default(0)
  imposedFeeHeatHome     Int       @default(0)
  imposedFeeAirCondition Int       @default(0)
  imposedFeeTurbines     Int       @default(0)
  feePerkwTurbines       Int       @default(0)
  creator                User?     @relation("creatorWorker", fields: [creatorId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  workers                User[]    @relation("creatorWorker")
  sessions               Session[]

  @@index([creatorId])
}

model Image {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String 
  url         String
}

model VerificationToken {
  identifier String   @id @db.ObjectId @map("_id")
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
