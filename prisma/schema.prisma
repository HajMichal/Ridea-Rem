generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}


datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
}

model User {
  id                     String    @id @default(cuid())
  name                   String?   @unique
  login                  String    @unique
  role                   Int       @default(3)
  email                  String?   
  password               String
  image                  String?
  creatorId              String?
  feePerkwForCompany     Int       @default(0)
  feePerkwHeatPump       Int       @default(0)
  feePerkwPhotovoltaic   Int       @default(0)
  imposedFeeForCompany   Int       @default(0)
  imposedFeeHeatPump     Int       @default(0)
  imposedFeePhotovoltaic Int       @default(0)
  feePerkwHeatHome       Int       @default(0)
  imposedFeeHeatHome     Int       @default(0)
  imposedFeeAirCondition Int       @default(0)
  imposedFeeTurbines     Int       @default(0)
  feePerkwTurbines       Int       @default(0)
  creator                User?     @relation("creatorWorker", fields: [creatorId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  workers                User[]    @relation("creatorWorker")

  @@index([creatorId])
}

model Image {
  id          String  @id @default(cuid())
  title       String
  description String 
  url         String
  createdAt   DateTime @default(now())
}

model Photovoltaic {
  id                     String    @id @default(cuid())
  userId                 String    @unique
  userName               String  

  /// [PanelsType]  
  panels_small           Json

  /// [PanelsType]  
  panels_medium          Json
      
  /// [PanelsType]  
  panels_large           Json    

  addons                 Json     
  dotations              Json     
  boilers                Json     

  /// [EnergyStoreType]
  energyStore            Json     
  
  carPort                Json
  creditPercentage       Float
  electricityPrice       Float  

    @@index([userId])
}


model Turbines {
  id          String    @id @default(cuid())
  userId      String    @unique
  userName    String  
  
  /// [Turbines]
  turbines    Json

  /// [TurbinesAddons]
  addons      Json

  /// [EnergyStore]
  energyStore Json

  @@index([userId])
}

model AirCondition {
  id              String    @id @default(cuid())
  userId          String    @unique
  userName        String  
  
  /// [AirConditionersType]
  airConditioners Json

  /// [AirConditionerAddonsType]
  addons          Json

  createdAt       DateTime @default(now())
  editedAt        DateTime @default(now())
  @@index([userId])
}